{
  "Kafka": {
    "BootstrapServers": [
      "localhost:19092"
    ],
    "SchemaRegistry": {
      "Url": "localhost:8081"
    }
  },
  "Topics": [
    {
      "TopicName": "orders",
      "MessageTypes": [
        "Kafka.TopicSplitter.Contracts.Events.Order.OrderCreated",
        "Kafka.TopicSplitter.Contracts.Events.Order.OrderCompleted"
      ]
    }
  ],
  "Serilog": {
    "Using": ["Serilog.Expressions"],
    "Enrich": ["WithMachineName", "WithThreadId", "FromLogContext"],
    "Properties": {
      "Service": "LetsGetChecked.Bus.Kafka.Dlq.Service"
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '%/healthcheck%' and (StatusCode < 400 or StatusCode is null)"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '%/metrics%'"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting": "Information",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.Mvc.Infrastructure.ControllerActionInvoker": "Warning",
        "Microsoft.AspNetCore.Mvc.StatusCodeResult": "Information",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
